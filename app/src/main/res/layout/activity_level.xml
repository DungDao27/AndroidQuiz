<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nice">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:background="@drawable/level_panel"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/easyButton"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/blue_buttonmdpi"
                android:layout_marginStart="63dp"
                android:layout_marginEnd="63dp"
                android:text="easy"
                android:textSize="22dp"
                />
            <Button
                android:id="@+id/normalButton"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/yello_buttonmdpi"
                android:layout_marginStart="63dp"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="normal"
                android:textSize="22dp"
                />
            <Button
                android:id="@+id/hardButton"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/red_buttonmdpi"
                android:layout_marginStart="63dp"
                android:layout_marginEnd="63dp"
                android:text="hard"
                android:textSize="22dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/cancel_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="88dp"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>