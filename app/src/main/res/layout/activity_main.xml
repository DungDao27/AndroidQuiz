<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nice">
        <ImageView
            android:id="@+id/ImgLevels"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/eng"/>

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:backgroundTint="#66CDAA"
            android:text="Quiz"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/button_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_start"
            android:backgroundTint="#66CDAA"
            android:text="Anagram"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/button_highest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_correct"
            android:backgroundTint="#66CDAA"
            android:text="Hight Scores"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/button_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_highest"
            android:backgroundTint="#66CDAA"
            android:text="Quit"
            android:textColor="@color/black"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>