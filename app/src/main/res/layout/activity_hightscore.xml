<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bule"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_marginTop="0dp"
        android:padding="30dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btscore_shape"
        android:text="Easy"
        android:textAlignment="center"
        android:textColor="#00CC00"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TxtHighscoreEasy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_txtscore"
        android:textAlignment="center"
        android:layout_marginRight="100dp"

        android:textColor="#0000FF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btscore_shape"
        android:text="Medium"
        android:textAlignment="center"
        android:textColor="#FF9900"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TxtHighscoreMedium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_txtscore"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btscore_shape"
        android:text="Hard"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TxtHighscoreHard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_txtscore"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:layout_marginRight="100dp"
        />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/cancel_button"
        android:layout_gravity="center"
        android:layout_marginBottom="88dp"
        />
</LinearLayout>